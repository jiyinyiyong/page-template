
*
  box-sizing border-box

body
  margin 0px
  background hsl(0,0,90)
  position absolute
  width 100%
  height 100%

#paper
  width 800px
  height 100%
  background white
  margin 0px auto
  position relative

  #text, #code
    border none
    position absolute
    top 0px
    left 0px
    width 100%
    height 100%
    padding 10px
    margin 0px
    font-size 14px
    font-family Monaco, monospace
    resize none
    overflow scroll

  #text
    opacity 0.6
    color hsl(0,80,60)

  #code
    .line
      height 20px

#note
  position absolute
  top 0px
  left 0px
  width 260px
  height 300px
  padding 20px
  font-size 16px